!!! 5
%html
  %head
    %title= title
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = javascript_include_tag 'http://userapi.com/js/api/openapi.js?24'
    :javascript
      VK.init({apiId: 2298668, onlyWidgets: true});
    = yield :head
  %body
    #container
      #logo
        %h1= link_to title, root_path
      = render :partial => 'shared/nav'
      .clear
      %br
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yield